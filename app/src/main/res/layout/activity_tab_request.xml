<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tableForRequest.tabRequestActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="ФИО"
            android:textColor="#0E0C0C" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="ФИО" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Кафе"
            android:textColor="#131313" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Кафе" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="Дата"
            android:textColor="#100F0F" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Дата" />

        <Button
            android:id="@+id/bSave"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:backgroundTint="#65DC82"
            android:text="OK" />

        <Button
            android:id="@+id/bOpen"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:backgroundTint="#239A9E"
            android:text="open" />

        <Button
            android:onClick="bClose"
            android:id="@+id/bClose1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:backgroundTint="#F47C7C"
            android:text="X" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:text="Сыр"
                    android:textColor="#0E0B0B" />

                <TextView
                    android:id="@+id/eName1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:text="Тесто"
                    android:textColor="#0E0B0B" />

                <TextView
                    android:id="@+id/eName2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:text="Клубника"
                    android:textColor="#0E0B0B" />

                <TextView
                    android:id="@+id/eName3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:text="Ветчина"
                    android:textColor="#0E0B0B" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/eNum"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_margin="6dp" />

                <EditText
                    android:id="@+id/eNum1"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_margin="6dp" />

                <EditText
                    android:id="@+id/eNum2"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_margin="6dp" />

                <EditText
                    android:id="@+id/eNum3"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_margin="6dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>