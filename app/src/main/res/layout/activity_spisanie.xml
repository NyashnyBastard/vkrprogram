<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".spisanieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/getBack1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="40dp"
            android:layout_weight="0"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:onClick="getBack11"
            app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip12"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:fontFamily="@font/kadwa"
            android:text="СПИСАНИЕ ЗА ДЕНЬ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip13"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:fontFamily="@font/kadwa"
            android:text="СПИСАНИЕ ЗА СМЕНУ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>