<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <View
            android:id="@+id/view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="0"
            android:backgroundTint="@color/material_on_background_disabled"/>


        <ImageButton
            android:id="@+id/messageBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:layout_weight="0"
            android:backgroundTint="#00000000"
            app:srcCompat="@drawable/test_messag" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/request_b"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0"
            android:background="@drawable/ic_baseline_article_24"
            android:backgroundTint="#009688"
            android:onClick="callRequest"
            android:text="Button"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/chek_list"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="110dp"
            android:layout_weight="0"
            android:background="@drawable/ic_baseline_fact_check_24"
            android:backgroundTint="#009688"
            android:onClick="chekList"
            android:text="Button"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/forgiveness"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_weight="0"
            android:background="@drawable/ic_baseline_assignment_late_24"
            android:backgroundTint="#009688"
            android:onClick="Spis"
            android:text="Button"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0"
            android:backgroundTint="@color/material_on_primary_disabled"
            app:srcCompat="@drawable/ic_baseline_lightbulb_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_weight="0"
        android:backgroundTint="@color/material_on_primary_disabled"
        android:orientation="horizontal">


        <ImageButton
            android:onClick="getOff"
            android:id="@+id/off"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="250dp"
            android:layout_weight="0"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:src="@drawable/off1"
            android:text="Button" />
    </LinearLayout>

</LinearLayout>