<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MenuRequestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/getB"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="40dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundGravity="left"
            android:onClick="getBack"
            android:orientation="vertical"
            app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"

        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:onClick="toProduct"
            android:id="@+id/bProduct"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:checkable="true"
            android:fontFamily="@font/kadwa"
            android:text="ПРОДУКТЫ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:checkedIconEnabled="true"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:onClick="toDrink"
            android:id="@+id/chip9"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:checkable="true"
            android:fontFamily="@font/kadwa"
            android:text="НАПИТКИ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:checkedIconEnabled="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip10"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:checkable="true"
            android:fontFamily="@font/kadwa"
            android:text="Склад"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:checkedIconEnabled="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip11"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:checkable="true"
            android:fontFamily="@font/kadwa"
            android:text="ХИМИЯ"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:checkedIconEnabled="true" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>